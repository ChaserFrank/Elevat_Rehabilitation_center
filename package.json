  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "dev:server": "nodemon src/server/server.js",
    "start": "node src/server/server.js",
    "build:full": "npm run build && npm run start",
    "postbuild": "mkdir -p src/server/public && cp -r dist/* src/server/public/",
    "render:build": "npm install && npm run build && npx prisma generate",
    "render:start": "npx prisma migrate deploy && npm start"
  },
  "dependencies": {
    "@heroicons/react": "^2.1.1",
    "@hookform/resolvers": "^3.3.4",
