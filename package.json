    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "nodemon": "^3.0.2",
    "postcss": "^8.4.35",
    "prisma": "^5.7.0",
    "tailwindcss": "^3.4.1",
    "terser": "^5.43.1",
    "vite": "^5.4.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
